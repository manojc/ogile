{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "App",
            "program": "${workspaceRoot}/server/app/server.ts",
            "cwd": "${workspaceRoot}",
            "env": {
                "PORT": "3000",
                "DATABASE_URL": "mongodb://localhost/ogile_db",
                "LOG_FILE": "access.log",
                "LOG_FILE_PATH": "../log",
                "SESSION_SECRET": "venator app"
            },
            "skipFiles": [
                "node_modules/**/*.js"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "console": "internalConsole"
        }
    ]
}